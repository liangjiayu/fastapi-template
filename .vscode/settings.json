{
	"[python]": {
		"editor.defaultFormatter": "charliermarsh.ruff",
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"source.fixAll": "explicit",
			"source.organizeImports": "explicit"
		}
	},
	"ruff.enable": true,
	"ruff.lint.enable": true,
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.rulers": [120],
}
